# Application Environment
APP_ENV=dev
LOG_LEVEL=debug

# AWS Configuration
AWS_REGION=us-east-1

# Vector Database (PostgreSQL with pgvector)
# For local development, you can use a local PostgreSQL instance
VECTORDB_URI=postgresql://localhost:5432/vectordb

# Embedding Model
EMBEDDING_MODEL_NAME=text-embedding-3-small

# Knowledge Graph Backend
KG_BACKEND=neptune

# For local development, you can use a local Gremlin server
KG_URI=ws://localhost:8182/gremlin

# Storage
TRANSCRIPTS_BUCKET=kg-rag-transcripts-local

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# AWS Bedrock (optional)
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Twitter API (optional)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token-here

# Instagram API (optional)
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token-here

# AWS Neptune Configuration
NEPTUNE_CLUSTER_ENDPOINT=your-neptune-cluster.cluster-xxxxx.region.neptune.amazonaws.com
NEPTUNE_PORT=8182
NEPTUNE_REGION=us-east-1
NEPTUNE_USE_SSL=true
NEPTUNE_VERIFY_SSL=true 